package com.mycompany.tareapwprograma;

/**
 *
 * @author estra
 */
public class Saludar {
    private int num_anios;
        private String nombre;

    public Saludar() {
        
    }

    public Saludar(int num_anios, String nombre) {
        this.num_anios = 1;
        this.nombre = "Jhon Snow";
    }

    public String getNombre() {
        return nombre;
    }

    public void setNombre(String nombre) {
        this.nombre = nombre;
    }

    public int getNum_anios() {
        return num_anios;
    }

    public void setNum_anios(int num_anios) {
        this.num_anios = num_anios;
    }
    public String saludar(){
        return "hola" + nombre;
    }
    public void saludar(int num_anios){
        setNum_anios(20);
        System.out.println("Tu edad es" + num_anios);
    }
   
    public void saludar(String nombre){
        System.out.println("Hola"+ nombre );
    }
    public void saludo(int num_anios){
        if(num_anios>=1 & num_anios<100){
            this.num_anios=num_anios;
        }
        else{
            this.num_anios=0;
        }
        System.out.println("Tu edad es: " + num_anios);
    }
}
